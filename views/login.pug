extends layout

block append head
    link(rel='stylesheet', href='/stylesheets/login.css')

block content
    div.container
            form.auth-form.position-absolute.top-50.start-50.translate-middle.w-100
                h2 Auth
                div.mb-3
                    label.form-label Login
                    input(type="text" name="login" placeholder="login" class="form-control" required)
                div.mb-3
                    label.form-label Password
                    input(type="password" name="password" placeholder="login" class="form-control" required)
                button(type="submit" class="btn btn-primary") Log In